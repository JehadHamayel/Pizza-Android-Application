<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/pizzaImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/specialImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pizzaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID:"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderdPizzaCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderdPizzaSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sizes:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderdPizzaQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderdPizzaTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderdPizzaOrderedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered Date:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderdPizzaOrderedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered Time:"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
