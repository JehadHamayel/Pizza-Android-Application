<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin"
    tools:context=".activities.SignUp">


    <TextView
        android:id="@+id/fnameT"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginTop="47dp"
        android:layout_weight="1"
        android:text="First Name"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/fname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firenasImage" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="47dp"
        android:layout_weight="1"
        android:background="@drawable/style"
        android:ems="10"
        android:hint="Enter First Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#C52700"
        android:textColorHint="#C4C52700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firenasImage" />

    <TextView
        android:id="@+id/lastName"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Last Name"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fnameT" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_weight="1"
        android:hint="Enter Last Name"
        android:padding="10dp"
        android:textColor="#C52700"
        android:textColorHint="#C4C52700"
        android:background="@drawable/style"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fname" />

    <TextView
        android:id="@+id/eemail"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Email"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:hint="Enter An Email"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lname"
        android:textColor="#C52700"
        android:textColorHint="#C4C52700"/>

    <TextView
        android:id="@+id/PhoneNumber"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Phone Number"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eemail" />

    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:hint="Enter A Phone Number"
        android:inputType="phone"
        android:padding="10dp"
        android:background="@drawable/style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/PhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:textColor="#C52700"
        android:textColorHint="#C4C52700"/>

    <TextView
        android:id="@+id/Gender"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Gender"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumber" />

    <Spinner
        android:id="@+id/genderSp"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/edittext_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Gender"
        app:layout_constraintTop_toBottomOf="@+id/phoneNum" />

    <TextView
        android:id="@+id/ppassword"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Password"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gender" />

    <EditText
        android:id="@+id/password"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:textColor="#C52700"
        android:textColorHint="#C4C52700"        android:ems="10"
        android:hint="Enter A Password"
        android:padding="10dp"
        android:inputType="textPassword"
        android:background="@drawable/style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ppassword"
        app:layout_constraintTop_toBottomOf="@+id/genderSp" />

    <TextView
        android:id="@+id/cpassword"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Confirm Password"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ppassword" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:hint="Confirm the Password"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/style"
        app:layout_constraintStart_toStartOf="@+id/cpassword"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:textColor="#C52700"
        android:textColorHint="#C4C52700"/>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="228dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#C62700"
        android:text="Add Admin"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#EA7F13"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:icon="@drawable/admin_1_svgrepo_com"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpassword"
        app:strokeColor="#5A1515" />

    <ImageView
        android:id="@+id/firenasImage"
        android:layout_width="148dp"
        android:layout_height="152dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man" />

    <Button
        android:id="@+id/uploadImageToFirebase"
        android:layout_width="186dp"
        android:layout_height="59dp"
        android:layout_marginStart="21dp"

        android:layout_marginTop="132dp"
        android:backgroundTint="#C62700"
        android:text="Add Profile Image"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toEndOf="@+id/firenasImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:iconPadding="0sp"
        tools:iconSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>