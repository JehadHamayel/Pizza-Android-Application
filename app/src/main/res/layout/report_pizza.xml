<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/pizzaImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/specialImage"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/pizzaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/orderdPizzaCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderdPizzaSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sizes:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/numberOfOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Orders:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/totalIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Income: 0.0$"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
