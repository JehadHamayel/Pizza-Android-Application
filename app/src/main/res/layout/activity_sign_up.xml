<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin"
    tools:context=".activities.SignUp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="#C04121"
        android:text="SignUp"
        android:textAlignment="center"

        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firenasImage" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Enter First Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#C04121"
        android:textColorHint="#C04121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_background"
        android:hint="Enter Last Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#C04121"
        android:textColorHint="#C04121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fname" />

    <TextView
        android:id="@+id/eemail"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Email"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName" />

    <TextView
        android:id="@+id/fnameT"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:text="First Name"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/fname"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/lastName"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Last Name"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fnameT" />

    <TextView
        android:id="@+id/PhoneNumber"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eemail" />

    <TextView
        android:id="@+id/Gender"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Gender"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneNumber" />

    <TextView
        android:id="@+id/ppassword"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Password"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gender" />

    <TextView
        android:id="@+id/cpassword"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_weight="1"
        android:text="Confirm Password"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/ppassword" />

    <EditText
        android:id="@+id/email"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/edittext_background"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#C04121"
        android:textColorHint="#C04121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lname" />

    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/edittext_background"
        android:hint="Enter Your Phone Number"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#C04121"
        android:textColorHint="#C04121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/PhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <Spinner
        android:id="@+id/genderSp"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"

        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edittext_background"
        app:layout_constraintStart_toStartOf="@+id/Gender"
        app:layout_constraintTop_toBottomOf="@+id/phoneNum" />

    <EditText
        android:id="@+id/password"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#C04121"
        android:textColorHint="#C04121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ppassword"
        app:layout_constraintTop_toBottomOf="@+id/genderSp" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/edittext_background"
        android:hint="Confirm Your Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#C04121"
        android:textColorHint="#C04121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cpassword"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C04121"
        android:text="SignUp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#EA7F13"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/admin_with_cogwheels_svgrepo_com"
        app:iconGravity="textStart"
        app:iconPadding="15dp"
        app:iconSize="20dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpassword"
        app:strokeColor="#5A1515" />

    <ImageView
        android:id="@+id/firenasImage"
        android:layout_width="133dp"
        android:layout_height="131dp"
        android:layout_marginTop="96dp"

        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man" />

    <Button
        android:id="@+id/uploadImageToFirebase"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#C04121"
        android:text="Upload Your Image"
        android:textColor="#FFFFFF"
        android:textSize="10sp"

        app:icon="@drawable/profile_round_1342_svgrepo_com"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/firenasImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793" />

</androidx.constraintlayout.widget.ConstraintLayout>